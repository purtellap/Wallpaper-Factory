    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/highlight_solid</item>
        <item name="android:textColorSecondary">@color/transparent_white</item>
        <item name="colorNavigationItem">@color/drawer_item</item>
        <item name="colorNavigationItemSelected">@color/white</item>
        <!--<item name="drawableNavigationItemBackground">@drawable/drawer_item_bkg</item>
        <item name="listChoiceBackgroundIndicator">@drawable/drawer_item_bkg</item>-->
        <item name="android:windowBackground">@color/black</item>
        <item name="dialogCornerRadius">30dp</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <!--<item name="itemBackground">?attr/drawableNavigationItemBackground</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="AppTheme.AppBarOverlay" >
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AlertDialogCustom">
        <item name="android:background">@color/black</item>
        <item name="android:buttonTint">@color/themeLight</item>
    </style>

    <style name="TextStyle">

        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="settingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">@dimen/settingsPad</item>
        <item name="android:paddingEnd">@dimen/settingsPad</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_ripple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="popupTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingEnd">@dimen/fab_margin</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/highlight_light</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:shadowRadius">4.0</item>
        <item name="android:shadowColor">@color/transparent_black</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
    </style>

    <style name="fragmentToolbarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_marginStart">56dp</item>
        <item name="android:layout_marginEnd">56dp</item>
    </style>

</resources>
